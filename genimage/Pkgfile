# Description: tool to generate multiple filesystem and flash/disk images from a given root filesystem tree
# URL: https://github.com/pengutronix/genimage
# Maintainer: Victor Martinez, pitillo at crux-arm dot nu
# Depends on: libconfuse

name=genimage
version=19
release=1
source=(https://github.com/pengutronix/${name}/archive/refs/tags/v${version}.tar.gz)

build() {
  cd ${name}-${version}
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR=${PKG} install
}
